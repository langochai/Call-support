<div class="container">
    <div class="row p-1">
        <div class="col-1">User</div>
        <div class="col-5"><input type="text" id="userInput" value="@ViewBag.UserName" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">To User</div>
        <div class="col-5"><input type="text" id="toUser" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Message</div>
        <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>

<input id="UserName" value="@ViewBag.UserName" hidden/>
<script src="~/assets/bundles/signalr/dist/browser/signalr.js"></script>
<script src="~/js/notification.js"></script>