<link href="~/css/history/styles.css" rel="stylesheet" />
<div class="mb-2">
    <div class="accordion" id="setting">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <i class="fa-solid fa-gear"></i><span class="ms-1">Cài đặt</span>
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#setting">
                <div class="accordion-body">
                    <div class="row m-0 p-0">
                        <div class="col-12 col-md-6">
                            <div class="form-group row mx-auto">
                                <label class="col-12 my-auto form-label label-header" for="from_department">Từ bộ phận</label>
                                <select class="form-control col-7 mx-1" id="from_department">
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group row mx-auto">
                                <label class="col-12 my-auto form-label label-header" for="to_department">Tới bộ phận</label>
                                <select class="form-control col-7 mx-1" id="to_department">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row m-0 p-0">
                        <div class="col-12">
                            <div class="form-group row mx-auto">
                                <label class="col-12 my-auto form-label label-header" for="lines">Dây chuyền</label>
                                <select class="form-control col-7 mx-1" id="lines" multiple data-show-selection-as-list="true">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row m-0 p-0">
                        <div class="col-12 col-md-6">
                            <div class="form-group row mx-auto">
                                <label class="col-12 my-auto form-label label-header" for="from_date">Từ ngày</label>
                                <div>
                                    <input type="date" class="form-control col-7 mx-1" id="from_date">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group row mx-auto">
                                <label class="col-12 my-auto form-label label-header" for="to_date">Tới ngày</label>
                                <div>
                                    <input type="date" class="form-control col-7 mx-1" id="to_date">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row m-0 p-0 mb-2">
    <div class="col-4 text-center py-2 fw-bolder">Trạng thái</div>
    <div class="col-8 row m-0 p-0">
        <span class="col-4 py-2 border text-center status-showcase red">Đang chờ</span>
        <span class="col-4 py-2 border text-center status-showcase yellow">Sửa chữa</span>
        <span class="col-4 py-2 border text-center status-showcase green">Hoàn thành</span>
    </div>
</div>
<div class="mb-2">
    <table class="table table-bordered table-hover" style="table-layout:fixed">
        <colgroup>
            <col style="width:10%" />
            <col style="width:15%" />
            <col style="width:20%" />
            <col style="width:10%" />
            <col style="width:10%" />
            <col style="width:20%" />
            <col style="width:10%" />
        </colgroup>
        <thead>
            <tr>
                <th class="text-center text-wrap text-break align-middle">Mã dây chuyền</th>
                <th class="text-center text-wrap text-break align-middle">Tên dây chuyền</th>
                <th class="text-center text-wrap text-break align-middle">Công đoạn</th>
                <th class="text-center text-wrap text-break align-middle">Vị trí</th>
                <th class="text-center text-wrap text-break align-middle">Bộ phận</th>
                <th class="text-center text-wrap text-break align-middle">Lỗi</th>
                <th>TG gọi</th>
                @* <th>TG chờ</th> *@
                @* <th>TG sửa</th> *@
                @* <th>TG xác nhận</th> *@
                @* <th>TT chuyền</th> *@
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<script src="~/assets/bundles/enhanced-bootstrap-select/dist/locale/vn-vn.min.js"></script>
<script src="~/assets/bundles/enhanced-bootstrap-select/dist/jquery.bs-select.min.js"></script>
<script src="~/js/history/check-settings.js"></script>
<script src="~/js/ajax-call.js"></script>
<script src="~/js/history/main.js"></script>
<script src="~/js/notification.js"></script>